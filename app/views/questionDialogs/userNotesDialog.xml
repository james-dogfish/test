<Alloy>
    <Window id="window" onClick="onClick">
        <View id="modalBackgorund">
            <Toolbar platform="ios" top="0" borderTop="true" borderBottom="true" barColor="#084f6f">
                <Items>
                    <FlexSpace/>
                    <Label id="appTitle"/>
                    <FlexSpace/>
                    <Button class="systemButton" title="Done" onClick="onClick" right="10"/>
                </Items>
            </Toolbar>
            <View id="textAreaContainerView">
                <TextArea id="textArea" onFocus="onFirstTimeSelect"/>
                <Label id="hintText" onFocus="onFirstTimeSelect"/>
            </View>
        </View>
    </Window>
</Alloy>