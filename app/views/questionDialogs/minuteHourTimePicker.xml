<Alloy>
	<Window id="window">
		<View id="background" onClick="onBackgroundClick"/>
		<View id="modalBackgorund">
			<Toolbar platform="ios" top="0" borderTop="true" borderBottom="true" barColor="#084f6f">
				<Button class="systemButton" onClick="clearButtonClick" left="10" >
					<Label class="systemButtonText" text="Clear" onClick="clearButtonClick" />
				</Button>
				<Label id="appTitle"/>
				<Button class="systemButton" onClick="rightNavButtonClick" right="10" >
					<Label class="systemButtonText" text="Done" onClick="rightNavButtonClick" />
				</Button>
				
			</Toolbar>
			<View id="pickerContainerView">
				<Picker id="pickerView" onChange="pickerChange">
					<PickerColumn id="hoursColumn" width="100dp"/>
					<PickerColumn id="minutesColumn" width="100dp"/>
				</Picker>
			</View>
		</View>
	</Window>
	
</Alloy>