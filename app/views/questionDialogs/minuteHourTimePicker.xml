<Alloy>
    <Window id="window">
        <View id="background" onClick="onBackgroundClick"/>
        <View id="modalBackgorund">
            <Toolbar platform="ios" top="0" borderTop="true" borderBottom="true" barColor="#084f6f">
                <Items>
                    <Button class="systemButton" title="Clear" onClick="clearButtonClick" left="10"/>
                    <FlexSpace/>
                    <Label id="appTitle"/>
                    <FlexSpace/>
                    <Button class="systemButton" title="Done" onClick="rightNavButtonClick" right="10"/>
                </Items>
            </Toolbar>
            <View id="pickerContainerView">
                <Picker id="pickerView" onChange="pickerChange">
                    <PickerColumn id="hoursColumn" width="100dp"/>
                    <PickerColumn id="minutesColumn" width="100dp"/>
                </Picker>
            </View>
        </View>
    </Window>
</Alloy>