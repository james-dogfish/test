<Alloy>
	<ItemTemplate id="dateRangeTemplate" name="dateRangeTemplate" class="basicTemplate">
        <View class="viewGroup">
			<View class="headerView" bindId="headerView">
				<Label id="questionTitle" bindId="title" class="questionTitle" />
				<Button class="notesButton" onClick="onNotesClick" bindId="notesBackground"/>
			</View>
			
			<View class="questionErrorMessageView" bindId="questionErrorMessageView">
				<Label id="questionErrorMessage" class="questionErrorMessage" bindId="questionErrorMessage"/>
			</View>
			
			<View class="questionView">	
				<!--
				<View id="inputContaner1" class="inputField">
					<Label id="textField1" bindId="displayValue"/>
				</View>
				-->
				<TextField id="textField1" class="inputField" bindId="displayValue" onClick="dateButton1Clicked"/>
				<Button id="button1" class="inputButton" onClick="dateButton1Clicked">Select</Button>
				<!--
				<View id="inputContaner2" class="inputField">
					<Label id="textField2" bindId="displayValue2"/>
				</View>
				-->
				<TextField id="textField2" class="inputField" bindId="displayValue2" onClick="dateButton2Clicked"/>
				<Button id="button2" class="inputButton" onClick="dateButton2Clicked">Select</Button>
			</View>
		</View>
    </ItemTemplate>
</Alloy>
