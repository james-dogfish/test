<Alloy>
	<ItemTemplate id="censusCounterTemplate" name="censusCounterTemplate" class="basicTemplate">
        <View id="mainView" class="viewGroup" bindId = "backgroundView">
			<View id="header" class="headerView" bindId="headerView" onClick="onTitleClick">
				<Label id="questionTitle" bindId="title" class="questionTitle" />
				<Button class="notesButton" onClick="onNotesClick" bindId="notesBackground"/>
			</View>
			
			<View id="questionView" class="questionView">
				<Button class="additionFiveButton" onTouchend="touchEnd" onLongpress="longPressMinusFive" onSingletap="minusFive">-5</Button>
				<Button class="additionOneButton" onTouchend="touchEnd" onLongpress="longPressMinusOne" onSingletap="minusOne">-1</Button>
				
				<TextField id="valueTextField" class="inputField" bindId="displayValue" onBlur="onTextField1Blur" onFocus="onTextFieldFocus" />
				<Button class="additionOneButton" onTouchend="touchEnd" onLongpress="longPressPlusOne" onSingletap="addOne">+1</Button>
				<Button class="additionFiveButton" onTouchend="touchEnd" onLongpress="longPressPlusFive" onSingletap="addFive">+5</Button>
			</View>
		</View>
    </ItemTemplate>
</Alloy>
