<Alloy>
	<ItemTemplate id="textFieldTemplate" name="textFieldTemplate" class="basicTemplate">
        <View class="viewGroup" bindId = "backgroundView">
			<View class="headerView" bindId="headerView" onClick="onTitleClick">
				<Label id="questionTitle" bindId="title" class="questionTitle"/>
				<Button class="notesButton" onClick="onNotesClick" bindId="notesBackground"/>
			</View>
			
			<View class="questionErrorMessageView" bindId="questionErrorMessageView">
				<Label id="questionErrorMessage" class="questionErrorMessage" bindId="questionErrorMessage"/>
			</View>
			
			
			<View class="questionView">
				
				<TextField id="valueTextField" class="inputField" bindId="displayValue" onBlur="onTextFieldBlur" onFocus="onTextFieldFocus" onChange="onTextFieldChange"/>	
				<!--
				<View id="valueTextFieldContainer" class="inputFieldContainer" >
					<TextArea  id="valueTextField"  bindId="displayValue" onBlur="onTextFieldBlur" onFocus="onTextFieldFocus" onChange="onTextFieldChange"/>
				</View>
				-->
			</View>
			
			
			
		</View>
    </ItemTemplate>
</Alloy>
