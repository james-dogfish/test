<Alloy>
	<ItemTemplate id="singleSelectTemplate" name="singleSelectTemplate" class="basicTemplate">
        <View class="viewGroup">
			<View class="headerView" bindId="headerView" onClick="debugShowRenderDependencies">
				<Label id="questionTitle" bindId="title" class="questionTitle" />
				<Button class="notesButton" onClick="onNotesClick" bindId="notesBackground"/>
			</View>
			
			<View class="questionErrorMessageView" bindId="questionErrorMessageView">
				<Label id="questionErrorMessage" class="questionErrorMessage" bindId="questionErrorMessage"/>
			</View>
		
			<View class="questionView">
				<!-->
				<View id="selectInputContaner" class="inputField">
					<Label id="selectTextField" bindId="displayValue"/>
				</View>
				-->
				<TextField id="selectTextField" class="inputField" bindId="displayValue" onClick="selectButtonClicked"/>
				<Button id="selectButton" class="inputButton" onClick="selectButtonClicked">Select</Button>
			</View>
			
		</View>
    </ItemTemplate>
</Alloy>
