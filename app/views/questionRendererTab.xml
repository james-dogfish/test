<Alloy>
    <Tab title="questionsTab" active="false">
        <Window id="window" tabBarHidden="true" navBarHidden="true" layout="vertical">
            <Toolbar id="toolbar" platform="ios">
                <Items>
                    <Button class="systemButton goto" onClick="showGoto" title="Go To"/>
                    <FlexSpace/>
                    <Label id="appTitle"/>
                    <FlexSpace/>
                    <Button class="systemButton" id="menuButton" onSingletap="openMenu" right="10" title="Menu" />
                </Items>
            </Toolbar>
        </Window>
    </Tab>
</Alloy>