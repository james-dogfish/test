<Alloy>
	<Window id="window" navBarHidden="true" fullScreen="true">
		<ScrollView id="container">
			<View id="settingView" layout="vertical">
				<View id="headingView">
					<Label class="heading" text="Settings"/>
					<Button id="closeButton" onClick='closeSettings' backgroundImage="/images/close.png" touchTestId='closeButton'/>
				</View> 
				<Label class='label' text="Name" />
				<TextField class='textField' id='name' onReturn="focusMobile"/>
				<Label class='label' text="Mobile Number" />
				<TextField class='numberField' id='mobile' onReturn="focusEmail"/>
				<Label class='label' text="Email" />
				<TextField class='textField' id='email' />
				<Label class='label' text="Single Section View - Ver. 1.0.20" />
				<Switch id='sectionSwitch' value='false' />
				<Button id='saveButton' title='Save' onClick='saveSettings' touchTestId='saveButton'/>
				
			</View>
		</ScrollView>
	</Window>
</Alloy>